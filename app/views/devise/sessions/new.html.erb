<h2 id="signin-header">Sign in</h2>

<div id="sign-in">
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.label :email, id: "label" %><br />
  <%= f.email_field :email, class: "form-control", :autofocus => true %></div>

  <div><%= f.label :password, id: "label" %><br />
  <%= f.password_field :password, class: "form-control" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me, id: "label" %></div>
  <% end -%>

  <div><%= f.submit "Sign in", class: "btn btn-default", id: "signin-btn" %></div>
<% end %>
</div>

<div id="devise-links">
<%= render "devise/shared/links" %>
</div>
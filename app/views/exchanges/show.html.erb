<div class="well">
  <h4></h4>
  <ul>
    <li>Station: <%= @exchange.station %></li>
    <li>Time: <%= @exchange.time %></li>
    <li>Price: <%= number_to_currency(exchange.transform_price, :unit => "$")  %></li>
    <% if @exchange.is_bike == true %>
    <li>Need a Bike</li>
    <% else %>
    <li>Need a Dock</li>
    <% end %>
    <% if @exchange.vendor_id == nil and current_user.id == @exchange.user_id %>
    <li><%= link_to "Delete", exchange_path(@exchange), :method => :delete %> </li>
    <% end %>
 
    <!-- < button_to "buy", buy_path, :id => @exchange.id, :method => :get %> -->

    <% if @exchange.user_id != current_user.id && @exchange.vendor_id == nil %> 
    <%= button_to "claim", claim_exchange_path, :id => @exchange.id, :method => :put %>
      <% end %> 

  </ul>
</div>
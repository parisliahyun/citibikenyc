<h1><%= @exchange.name %></h1>
<%= @exchange.description.html_safe %>
<% if @error %>
<%= @error %>
<% end %>
<p>Price: <%= formatted_price(@exchange.price) %></p>
<%= form_tag buy_path(permalink: @exchange.permalink) do %>
<script src="https://checkout.stripe.com/v2/checkout.js"
class="stripe-button"
data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
data-description="<%= @exchange.name %>"
data-amount="<%= @exchange.price %>"></script>
<% end %>
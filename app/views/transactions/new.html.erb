<h1><%= @exchange.station %></h1>
<%= @exchange.station.html_safe %>
<% if @error %>
<%= @error %>
<% end %>
<p>Price: <%= formatted_price(@exchange.price) %></p>
<%= form_tag buy_path(id: @exchange.id) do %>
<script src="https://checkout.stripe.com/v2/checkout.js"
class="stripe-button"
data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
data-description="<%= @exchange.station %>"
data-amount="<%= @exchange.price %>"></script>
<% end %>
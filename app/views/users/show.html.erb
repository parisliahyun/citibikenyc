<%= rating_for @user %>

<h2>Your Saved Destinations:</h2>
  <ul>
    <% if @user.favorites.length != 0 %>
      <% @user.favorites.each do |favorite| %>
      <li><%= favorite.address %></li>

      <!-- NEW SEARCH -->
      <%= form_tag searches_path, :method => :post do %>
      <li class="favorites"><%= submit_tag "Search", :class => 'btn btn-default', :name => :address %></li>
      <% end %>
      
      <!-- NEW EXCHANGE -->
      <li><%= link_to "Send Me an Angel", new_exchange_path({:station => favorite.address}), :class => "btn btn-default" %></li>
      <% end %>
    <% else %>
      <p>You haven't saved any destinations yet.</p>  
    <% end %>
  </ul>

<% @exchanges.each do |exchange| %>  
  <% if exchange.vendor_id == current_user.id %>
  <h2>Vendor View: </h2> 
  <p>Your currently scheduled exchange:</p>
  <ul>
    <li>Requester: <%= exchange.requester_id %></li>
    <li>Station: <%= exchange.station %></li>
    <li>Deliver by: <%= exchange.transform_time %></li>
      <% if exchange.is_bike == true %>
          <li>Your service: Deliver a Bike</li>
      <% else %>
         <li>Your service: Open up a Dock</li>
      <% end %>
      <!-- THIS SHOULD CHARGE THE CARD FROM THE SAVED CARD INFORMATION FILE OF EXCHANGE.USER_ID -->
      <li><%= button_to "Mark as Completed", buy_path, :id => exchange.id, :method => :get %></li>
    <% end  %> 
  </ul>
  <% end %>

<div class="new_search">
  <h2><%= link_to "New Search", new_search_path %> </h2>
  <h2><%= link_to "Schedule an Exchange", new_exchange_path %> </h2> 
    <% if current_user.role == "vendor" %> 
  <h2> <%= link_to "All Exchanges", exchanges_path %> </h2> 
   <% end %> 
</div>

<div class="comment-form">
  <%= render "comments/form" %>
</div>

<%= render "comments/comments" %> 

<% content_for :javascript_includes do %>
  <%= javascript_include_tag 'jquery.raty.js','letsrate.js'%>
<% end %> 

  







